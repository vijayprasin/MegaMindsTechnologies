@page
@model MegaMinds.Pages.User.AddModel

@{
    var message = ViewData["Message"]?.ToString();
}

<form method="post">
<h1 class="mb-3">Add New User</h1>

    @if (!string.IsNullOrWhiteSpace(message))
    {
        <div class="alert alert-success" role="alert">
            @message
        </div>
    }

<div class="mb-3">
    <label class="form-label">Name</label>
    <input type="text" class="form-control" asp-for="AddUserRequest.Name" />
</div>

<div class="mb-3">
    <label class="form-label">Email</label>
        <input type="text" class="form-control" asp-for="AddUserRequest.Email" />
</div>

<div class="mb-3">
    <label class="form-label">Phone</label>
        <input type="number" class="form-control" asp-for="AddUserRequest.Phone" />
</div>

<div class="mb-3">
    <label class="form-label">Address</label>
        <input type="text" class="form-control" asp-for="AddUserRequest.Address" />
</div>

<div class="mb-3">
        <label class="form-label">City</label>
        <input type="text" class="form-control" asp-for="AddUserRequest.City" />
</div>

<div class="mb-3">
        <label class="form-label">State</label>
        <input type="text" class="form-control" asp-for="AddUserRequest.State" />
</div>

    <div class="mb-3">
        <label><input type="checkbox" id="agree" name="agree" required> I agree to the terms and conditions</label>
    </div>

<div class="mb-3">
    <button type="submit" class="btn btn-primary">Save</button>
</div>
</form>
